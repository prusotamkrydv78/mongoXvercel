<%- include('../partials/header') %>

<div class="auth-container auth-bg-pattern">
    <div class="container">
        <div class="row min-vh-100 align-items-center">
            <div class="col-lg-6 d-none d-lg-block">
                <div class="auth-image-container" data-aos="fade-right">
                    <img src="https://illustrations.popsy.co/violet/digital-nomad.svg" alt="Login Illustration" class="img-fluid">
                    <div class="auth-quote">
                        <blockquote>
                            <p>"The only way to do great work is to love what you do."</p>
                            <footer>â€” Steve Jobs</footer>
                        </blockquote>
                    </div>
                </div>
            </div>
            <div class="col-lg-6" data-aos="fade-left">
                <div class="auth-form-container">
                    <div class="auth-header text-center mb-5">
                        <a href="/" class="auth-logo d-inline-block mb-4">
                            <i class="fas fa-pen-fancy me-2"></i>BlogVerse
                        </a>
                        <h1 class="auth-title">Welcome Back</h1>
                        <p class="auth-subtitle">Sign in to continue to your account</p>
                    </div>

                    <form method="post" action="/auth/login" class="auth-form">
                        <div class="mb-4">
                            <label for="username" class="form-label">Username</label>
                            <div class="input-group auth-input-group">
                                <span class="input-group-text">
                                    <i class="far fa-envelope"></i>
                                </span>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username" required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <label for="password" class="form-label mb-0">Password</label>
                                <a href="#" class="auth-link">Forgot password?</a>
                            </div>
                            <div class="input-group auth-input-group">
                                <span class="input-group-text">
                                    <i class="far fa-lock-alt"></i>
                                </span>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                                <button class="btn btn-outline-secondary toggle-password" type="button">
                                    <i class="far fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-4 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                        </div>

                        <div class="auth-divider">
                            <span>or continue with</span>
                        </div>

                        <div class="auth-social-buttons">
                            <button type="button" class="btn btn-outline-light social-btn">
                                <i class="fab fa-google"></i>
                            </button>
                            <button type="button" class="btn btn-outline-light social-btn">
                                <i class="fab fa-facebook-f"></i>
                            </button>
                            <button type="button" class="btn btn-outline-light social-btn">
                                <i class="fab fa-twitter"></i>
                            </button>
                            <button type="button" class="btn btn-outline-light social-btn">
                                <i class="fab fa-github"></i>
                            </button>
                        </div>
                    </form>

                    <div class="auth-footer text-center mt-4">
                        <p>Don't have an account? <a href="/auth/register" class="auth-link">Sign up</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer-minimal') %>
