<%- include('partials/header') %>

<!-- Hero Section -->
<section class="hero-section mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 text-center text-lg-start" data-aos="fade-right">
                <h1 class="display-4 fw-bold mb-4">Explore Ideas, Share Stories</h1>
                <p class="lead mb-4">Join our community of writers and readers to discover inspiring content and share your unique perspective with the world.</p>
                <div class="d-flex flex-wrap gap-3 justify-content-center justify-content-lg-start">
                    <a class="btn hero-btn" href="/auth/register">Get Started <i class="fas fa-arrow-right ms-2"></i></a>
                    <a class="btn btn-outline-light" href="#featured-posts">Explore Posts <i class="fas fa-compass ms-2"></i></a>
                </div>
                <div class="mt-4 d-none d-lg-block">
                    <div class="d-flex align-items-center">
                        <div class="d-flex">
                            <img src="https://randomuser.me/api/portraits/men/32.jpg" class="rounded-circle border border-2 border-white" width="40" height="40" alt="User" style="margin-right: -10px; z-index: 3">
                            <img src="https://randomuser.me/api/portraits/women/44.jpg" class="rounded-circle border border-2 border-white" width="40" height="40" alt="User" style="margin-right: -10px; z-index: 2">
                            <img src="https://randomuser.me/api/portraits/men/68.jpg" class="rounded-circle border border-2 border-white" width="40" height="40" alt="User" style="margin-right: -10px; z-index: 1">
                        </div>
                        <span class="text-white ms-3"><span class="fw-bold">1,200+</span> writers have joined</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block" data-aos="fade-left">
                <img src="https://illustrations.popsy.co/white/blogging.svg" alt="Hero Illustration" class="img-fluid" style="max-height: 400px;">
            </div>
        </div>
    </div>
</section>

<!-- Featured Categories -->
<section class="mb-5 py-5 bg-light rounded-4">
    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-6">
                <h2 class="fw-bold" data-aos="fade-up">Explore Popular Categories</h2>
                <p class="text-muted" data-aos="fade-up" data-aos-delay="100">Discover content across various topics that interest you</p>
            </div>
            <div class="col-lg-6 text-lg-end d-flex align-items-center justify-content-lg-end">
                <a href="/categories" class="btn btn-outline-primary rounded-pill px-4" data-aos="fade-up" data-aos-delay="200">View All Categories <i class="fas fa-arrow-right ms-2"></i></a>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-3 col-md-6" data-aos="fade-up">
                <div class="card border-0 rounded-4 text-white overflow-hidden h-100">
                    <img src="https://images.unsplash.com/photo-1517694712202-14dd9538aa97" class="card-img h-100" alt="Technology">
                    <div class="card-img-overlay d-flex flex-column justify-content-between" style="background: linear-gradient(to top, rgba(0,0,0,0.8), rgba(0,0,0,0.2))">
                        <div class="category-icon bg-primary bg-opacity-25 text-white rounded-circle p-2 align-self-end">
                            <i class="fas fa-laptop fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title fw-bold mb-1">Technology</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-text small mb-0">24 articles</p>
                                <a href="#" class="btn btn-sm btn-light rounded-pill px-3">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                <div class="card border-0 rounded-4 text-white overflow-hidden h-100">
                    <img src="https://images.unsplash.com/photo-1490750967868-88aa4486c946" class="card-img h-100" alt="Lifestyle">
                    <div class="card-img-overlay d-flex flex-column justify-content-between" style="background: linear-gradient(to top, rgba(0,0,0,0.8), rgba(0,0,0,0.2))">
                        <div class="category-icon bg-success bg-opacity-25 text-white rounded-circle p-2 align-self-end">
                            <i class="fas fa-leaf fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title fw-bold mb-1">Lifestyle</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-text small mb-0">18 articles</p>
                                <a href="#" class="btn btn-sm btn-light rounded-pill px-3">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="card border-0 rounded-4 text-white overflow-hidden h-100">
                    <img src="https://images.unsplash.com/photo-1507525428034-b723cf961d3e" class="card-img h-100" alt="Travel">
                    <div class="card-img-overlay d-flex flex-column justify-content-between" style="background: linear-gradient(to top, rgba(0,0,0,0.8), rgba(0,0,0,0.2))">
                        <div class="category-icon bg-info bg-opacity-25 text-white rounded-circle p-2 align-self-end">
                            <i class="fas fa-plane fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title fw-bold mb-1">Travel</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-text small mb-0">32 articles</p>
                                <a href="#" class="btn btn-sm btn-light rounded-pill px-3">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="300">
                <div class="card border-0 rounded-4 text-white overflow-hidden h-100">
                    <img src="https://images.unsplash.com/photo-1498837167922-ddd27525d352" class="card-img h-100" alt="Food">
                    <div class="card-img-overlay d-flex flex-column justify-content-between" style="background: linear-gradient(to top, rgba(0,0,0,0.8), rgba(0,0,0,0.2))">
                        <div class="category-icon bg-warning bg-opacity-25 text-white rounded-circle p-2 align-self-end">
                            <i class="fas fa-utensils fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title fw-bold mb-1">Food</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-text small mb-0">15 articles</p>
                                <a href="#" class="btn btn-sm btn-light rounded-pill px-3">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Latest Posts -->
<section id="featured-posts" class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-6">
                <h2 class="fw-bold" data-aos="fade-up">Featured Articles</h2>
                <p class="text-muted" data-aos="fade-up" data-aos-delay="100">Discover our most popular and trending content</p>
            </div>
            <div class="col-lg-6 text-lg-end d-flex align-items-center justify-content-lg-end">
                <div class="d-flex gap-2" data-aos="fade-up" data-aos-delay="200">
                    <button class="btn btn-sm btn-outline-secondary rounded-pill px-3 active">All</button>
                    <button class="btn btn-sm btn-outline-secondary rounded-pill px-3">Technology</button>
                    <button class="btn btn-sm btn-outline-secondary rounded-pill px-3">Lifestyle</button>
                    <button class="btn btn-sm btn-outline-secondary rounded-pill px-3">Travel</button>
                </div>
            </div>
        </div>

        <!-- Featured Post (First Post Highlighted) -->
        <% if (posts.length > 0) { %>
            <div class="row mb-5" data-aos="fade-up">
                <div class="col-12">
                    <div class="card border-0 rounded-4 overflow-hidden">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <img src="<%= posts[0].image %>" class="img-fluid h-100 w-100" style="object-fit: cover;" alt="<%= posts[0].title %>">
                            </div>
                            <div class="col-lg-6">
                                <div class="card-body p-4 p-lg-5 d-flex flex-column h-100 justify-content-between">
                                    <div>
                                        <div class="d-flex align-items-center mb-3">
                                            <span class="badge bg-primary me-2">Featured</span>
                                            <span class="badge bg-light text-dark">Technology</span>
                                        </div>
                                        <h3 class="card-title fw-bold mb-3"><%= posts[0].title %></h3>
                                        <p class="card-text"><%= posts[0].content %></p>
                                    </div>

                                    <div class="mt-4">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <div class="d-flex align-items-center">
                                                <img src="<%= posts[0].creator.profileImage %>" alt="<%= posts[0].creator.username %>" class="rounded-circle me-2" width="40" height="40">
                                                <div>
                                                    <p class="mb-0 fw-medium"><%= posts[0].creator.username %></p>
                                                    <p class="text-muted small mb-0"><i class="far fa-calendar-alt me-1"></i> <%= posts[0].createdAt.toLocaleDateString() %></p>
                                                </div>
                                            </div>
                                            <div>
                                                <span class="me-3"><i class="far fa-heart me-1"></i> 42</span>
                                                <span><i class="far fa-comment me-1"></i> <%= posts[0].comments.length %></span>
                                            </div>
                                        </div>
                                        <a href="/posts/<%= posts[0].id %>" class="btn btn-primary w-100">Read Full Article</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Regular Posts Grid -->
        <div class="row g-4">
            <% posts.slice(1).forEach((post, index) => { %>
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="position-relative">
                            <img src="<%= post.image %>" class="card-img-top" alt="<%= post.title %>">
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-light text-dark">Technology</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="<%= post.creator.profileImage %>" alt="<%= post.creator.username %>" class="rounded-circle me-2" width="30" height="30">
                                <span class="small text-muted">By <%= post.creator.username %></span>
                                <span class="small text-muted ms-auto"><i class="far fa-calendar-alt me-1"></i> <%= post.createdAt.toLocaleDateString() %></span>
                            </div>
                            <h5 class="card-title fw-bold"><%= post.title %></h5>
                            <p class="card-text post-content"><%= post.content %></p>
                        </div>
                        <div class="card-footer bg-white border-0 pt-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="/posts/<%= post.id %>" class="btn btn-outline-primary rounded-pill px-4">Read More</a>
                                <div>
                                    <button class="btn btn-sm btn-light rounded-circle p-2 me-1"><i class="far fa-heart"></i></button>
                                    <button class="btn btn-sm btn-light rounded-circle p-2"><i class="far fa-bookmark"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-center mt-5" data-aos="fade-up">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="my-5 py-5" data-aos="fade-up">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card border-0 rounded-4 overflow-hidden newsletter-card">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-lg-6 p-5 d-flex flex-column justify-content-center newsletter-left-panel">
                                <div class="text-white">
                                    <h3 class="fw-bold mb-3">Stay Updated</h3>
                                    <p class="mb-4 opacity-75">Join our newsletter and never miss out on new blog posts, tips, and updates. We deliver the quality content straight to your inbox.</p>
                                    <div class="d-flex flex-wrap gap-3 mb-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-white bg-opacity-25 rounded-circle p-2 me-2">
                                                <i class="fas fa-check text-white"></i>
                                            </div>
                                            <span>Weekly Updates</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-white bg-opacity-25 rounded-circle p-2 me-2">
                                                <i class="fas fa-check text-white"></i>
                                            </div>
                                            <span>Exclusive Content</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 p-5 newsletter-right-panel">
                                <h4 class="fw-bold mb-4">Subscribe to our newsletter</h4>
                                <form>
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Full Name</label>
                                        <input type="text" class="form-control" id="name" placeholder="Enter your name">
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email Address</label>
                                        <input type="email" class="form-control" id="email" placeholder="Enter your email">
                                    </div>
                                    <div class="mb-3 form-check">
                                        <input type="checkbox" class="form-check-input" id="privacyCheck" checked>
                                        <label class="form-check-label" for="privacyCheck">I agree to receive emails from BlogVerse</label>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">Subscribe Now</button>
                                    <div class="text-center mt-3">
                                        <small class="text-muted">We respect your privacy. Unsubscribe at any time.</small>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
